<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--fragment_dou_yin_view-->
    <!--加载失败布局-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="84.5dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28.1dp"
            android:src="@drawable/icon_nonetwork"
            android:layout_above="@+id/tv_out_network"/>
        <TextView
            android:id="@+id/tv_out_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="14sp"
            android:text="加载失败了~"
            android:textColor="@color/color_text_default"/>

        <TextView
            android:id="@+id/tv_retry"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_out_network"
            android:layout_centerInParent="true"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="重试"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/retry_btn_shape" />

    </RelativeLayout>

</LinearLayout>