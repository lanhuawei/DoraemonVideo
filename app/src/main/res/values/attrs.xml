<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PtrFrameLayout">
        <!-- Optional. If you put header and content in xml, you can you these to specify them. -->
        <attr name="ptr_header" format="reference" />
        <attr name="ptr_content" format="reference" />

        <!-- the resistance when you are moving the frame -->
        <attr name="ptr_resistance" format="float" />

        <!-- the ration of the height of the header to trigger refresh -->
        <attr name="ptr_ratio_of_header_height_to_refresh" format="float" />

        <attr name="ptr_duration_to_close" format="integer" />
        <attr name="ptr_duration_to_close_header" format="integer" />

        <!-- pull to refresh, otherwise release to refresh, default is release to refresh -->
        <attr name="ptr_pull_to_fresh" format="boolean" />

        <!-- keep header when refreshing-->
        <attr name="ptr_keep_header_when_refresh" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PtrClassicHeader">
        <attr name="ptr_rotate_ani_time" format="integer" />
    </declare-styleable>

    <!--LoadFrameLayout 默认背景加载-->
    <declare-styleable name="LoadFrameLayout">
        <attr name="emptyView" format="reference"/>
        <attr name="errorView" format="reference"/>
        <attr name="loadingView" format="reference"/>
    </declare-styleable>

    <!--圆形头像-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color"/>
        <attr name="civ_circle_background_color" format="color"/>
    </declare-styleable>

    <!-- 解决TextView 中drawableleft 图片大小不可控问题-->
    <declare-styleable name="TextImageView">
        <attr name="drawableLeftWidth" format="dimension"/>
        <attr name="drawableLeftHeight" format="dimension"/>
        <attr name="drawableTopWidth" format="dimension"/>
        <attr name="drawableTopHeight" format="dimension"/>
        <attr name="drawableRightWidth" format="dimension"/>
        <attr name="drawableRightHeight" format="dimension"/>
        <attr name="drawableBottomWidth" format="dimension"/>
        <attr name="drawableBottomHeight" format="dimension"/>
    </declare-styleable>

    <!-- 沉浸式状态栏 需要调整的view-->
    <attr name="immer_enable" format="boolean" />

    <!--滑动指示器 attrs.xml的名字要和控件一致  PagerSlidingTabStrip    PagerSlidingTab-->
    <!--内部是这个PagerSlidingTabStrip-->
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingRight" format="dimension" />
        <attr name="pstsTabPaddingLeft" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
    </declare-styleable>

    <!--PagerSlidingTab  pager_sliding_tab_item_with_ripple 点击产生的水波纹效果-->
    <declare-styleable name="RippleView">
        <attr name="mrl_rippleColor" format="color" localization="suggested" />
        <attr name="mrl_rippleDimension" format="dimension" localization="suggested" />
        <attr name="mrl_rippleOverlay" format="boolean" localization="suggested" />
        <attr name="mrl_rippleAlpha" format="float" localization="suggested" />
        <attr name="mrl_rippleDuration" format="integer" localization="suggested" />
        <attr name="mrl_rippleFadeDuration" format="integer" localization="suggested" />
        <attr name="mrl_rippleHover" format="boolean" localization="suggested" />
        <attr name="mrl_rippleBackground" format="color" localization="suggested" />
        <attr name="mrl_rippleDelayClick" format="boolean" localization="suggested" />
        <attr name="mrl_ripplePersistent" format="boolean" localization="suggested" />
        <attr name="mrl_rippleInAdapter" format="boolean" localization="suggested" />
        <attr name="mrl_rippleRoundedCorners" format="dimension" localization="suggested" />
        <attr name="mrl_ripplePadding" format="dimension" localization="suggested"/>
        <attr name="mrl_ripplePaddingTop" format="dimension" localization="suggested"/>
        <attr name="mrl_ripplePaddingLeft" format="dimension" localization="suggested"/>
        <attr name="mrl_ripplePaddingRight" format="dimension" localization="suggested"/>
        <attr name="mrl_ripplePaddingBottom" format="dimension" localization="suggested"/>
        <attr name="mrl_rippleFromCenter" format="boolean" localization="suggested"/>
    </declare-styleable>



    <!--收起，展开的TextView-->
    <declare-styleable name="FolderTextView">
        <attr name="foldText" format="string" />
        <attr name="unFoldText" format="string" />
        <attr name="foldLine" format="integer" />
        <attr name="tailTextColor" format="color" />
        <attr name="canFoldAgain" format="boolean" />
    </declare-styleable>


    <declare-styleable name="WHRatio">
        <attr name="ratio" format="float" />
    </declare-styleable>

    <declare-styleable name="CombineText">
        <attr name="name" format="string" />
        <attr name="num" format="string" />
        <attr name="num_big" format="boolean" />
    </declare-styleable>
    <!--自动计算的EditText-->
    <declare-styleable name="AutoCountEditTextLayout">
        <attr name="max_input_length" format="integer" />
    </declare-styleable>

    <attr name="color_no_finger_inner_circle" format="color" />
    <attr name="color_no_finger_outer_circle" format="color" />
    <attr name="color_finger_on" format="color" />
    <attr name="color_finger_up" format="color" />
    <attr name="color_finger_up_error" format="color" />
    <attr name="count" format="integer" />
    <attr name="tryTimes" format="integer" />

    <declare-styleable name="GestureLockViewGroup">
        <attr name="color_no_finger_inner_circle" />
        <attr name="color_no_finger_outer_circle" />
        <attr name="color_finger_on" />
        <attr name="color_finger_up" />
        <attr name="color_finger_up_error" />
        <attr name="count" />
        <attr name="tryTimes" />
    </declare-styleable>

    <declare-styleable name="FlowCenterLayout">
        <attr name="itemgap" format="dimension" />
    </declare-styleable>


    <declare-styleable name="VideoSuggestList">
        <attr name="TopPullRefresh" format="boolean" />
        <attr name="BottomLoadMore" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CenterText">
        <attr name="text" format="string" />
        <attr name="single_max_text_num" format="integer" />
    </declare-styleable>

    <declare-styleable name="CommentEdit">
        <attr name="showCommentList" format="boolean" />
    </declare-styleable>

    <!--点赞   PraiseScaleView-->
    <declare-styleable name="PraiseViewStyle">
        <attr name="drawableSelector" format="reference" />
    </declare-styleable>

    <declare-styleable name="pageIndicator">
        <attr name="indicator_centered" format="boolean" />
        <attr name="indicator_fillColor" format="color" />
        <attr name="indicator_radius" format="dimension" />
        <attr name="indicator_snap" format="boolean" />
        <attr name="indicator_strokeColor" format="color" />
        <attr name="indicator_strokeWidth" format="dimension" />
        <attr name="indicator_fill_edge_strokeWidth" format="dimension" />
        <attr name="indicator_default_edge_strokeWidth" format="dimension" />
        <attr name="indicator_fill_edge_strokeColor" format="color" />
        <attr name="indicator_default_edge_strokeColor" format="color" />
        <attr name="indicator_spacing" format="dimension" />
    </declare-styleable>





</resources>